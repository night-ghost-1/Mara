{
    "compilerOptions": {
        "strict": true,
        "baseUrl": "./CoreScripts/",
        "rootDirs": ["ModData/Scripts", "CoreScripts"],
        "outDir": "jsBuild", //dummy parameter to suppress errors for .js files in VS Code
        "module": "es2015",
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "preserveConstEnums": true,
        "removeComments": false,
        "sourceMap": true,
        "strictNullChecks": true,
        "target": "ES6",
        "allowJs": true,
        "lib": [
            "es2017"
        ],
    },
    "include": [
        "./**/*.ts",
        "./**/*.d.ts"
    ]
}